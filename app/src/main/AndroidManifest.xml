<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".TheBarberShopApp"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheBarberShop"
        tools:targetApi="31">
        <activity
            android:name=".views.homeActivity.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".views.NewReservationActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".views.searchActivity.SearchActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".views.appointmentsActivity.AppointmentActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".views.profileActivity.ProfileActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".views.loginActivity.LoginActivity"
            android:exported="true">
        </activity>
        <activity
            android:name=".views.registerActivity.RegisterActivity"
            android:exported="true">
        </activity>
        <activity android:name=".views.myaccountActivity.MyAccountActivity" android:exported="true"/>
    </application>

</manifest>